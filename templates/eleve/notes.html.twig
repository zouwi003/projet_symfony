{% extends 'base.html.twig' %}

{% block title %}Notes de {{ eleve.nom }} {{ eleve.prenom }}{% endblock %}

{% block body %}
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-clipboard-data-fill"></i> Notes de {{ eleve.nom }} {{ eleve.prenom }}</h1>
        <p class="text-muted mb-0">
            <i class="bi bi-people"></i> Classe : {{ eleve.classe ? eleve.classe.nom : 'Aucune classe' }}
        </p>
    </div>
    <div class="d-flex gap-2">
        <a href="{{ path('app_note_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Ajouter une note
        </a>
        <a href="{{ path('app_eleve_show', {'id': eleve.id}) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
    </div>
</div>

{% if notes|length > 0 %}
<div class="row g-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-list-ul"></i> Toutes les notes ({{ notes|length }})
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Matière</th>
                                <th>Note</th>
                                <th>Enseignant</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for note in notes %}
                            <tr>
                                <td>
                                    <strong>{{ note.matiere.nom }}</strong>
                                    <span class="badge bg-secondary ms-2">Coef. {{ note.matiere.coef }}</span>
                                </td>
                                <td>
                                    <span class="badge {% if note.note >= 16 %}bg-success{% elseif note.note >= 12 %}bg-info{% elseif note.note >= 10 %}bg-warning{% else %}bg-danger{% endif %} fs-6">
                                        {{ note.note }}/20
                                    </span>
                                </td>
                                <td>{{ note.enseignant.nom }} {{ note.enseignant.prenom }}</td>
                                <td class="text-end">
                                    <a href="{{ path('app_note_show', {'id': note.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="{{ path('app_eleve_bulletin', {'id': eleve.id}) }}" class="btn btn-success">
        <i class="bi bi-file-earmark-text"></i> Voir le bulletin complet
    </a>
</div>
{% else %}
<div class="card">
    <div class="card-body text-center py-5">
        <i class="bi bi-inbox" style="font-size: 4rem; color: #d1d5db;"></i>
        <h4 class="mt-3">Aucune note enregistrée</h4>
        <p class="text-muted">Cet élève n'a pas encore de notes.</p>
        <a href="{{ path('app_note_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Ajouter la première note
        </a>
    </div>
</div>
{% endif %}
{% endblock %}
