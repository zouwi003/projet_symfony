{% extends 'base.html.twig' %}

{% block title %}Accueil - Gestion d'Établissement{% endblock %}

{% block body %}
<div class="page-header text-center">
    <h1><i class="bi bi-house-door-fill"></i> Bienvenue dans le système de gestion d'établissement</h1>
    <p class="text-muted mb-0">Gérez facilement vos classes, élèves, matières et notes</p>
</div>

<div class="row g-4">
    <div class="col-md-6 col-lg-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-people-fill" style="font-size: 4rem; color: #4f46e5;"></i>
                </div>
                <h3 class="card-title">Classes</h3>
                <p class="card-text text-muted">Gérez les classes de l'établissement</p>
                <a href="{{ path('app_classe_index') }}" class="btn btn-primary w-100">
                    <i class="bi bi-arrow-right"></i> Voir les classes
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-person-badge-fill" style="font-size: 4rem; color: #10b981;"></i>
                </div>
                <h3 class="card-title">Élèves</h3>
                <p class="card-text text-muted">Gérez les élèves et leurs informations</p>
                <a href="{{ path('app_eleve_index') }}" class="btn btn-success w-100">
                    <i class="bi bi-arrow-right"></i> Voir les élèves
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-book-fill" style="font-size: 4rem; color: #f59e0b;"></i>
                </div>
                <h3 class="card-title">Matières</h3>
                <p class="card-text text-muted">Gérez les matières enseignées</p>
                <a href="{{ path('app_matiere_index') }}" class="btn btn-warning w-100">
                    <i class="bi bi-arrow-right"></i> Voir les matières
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-clipboard-data-fill" style="font-size: 4rem; color: #3b82f6;"></i>
                </div>
                <h3 class="card-title">Notes</h3>
                <p class="card-text text-muted">Saisissez et consultez les notes</p>
                <a href="{{ path('app_note_index') }}" class="btn btn-info w-100">
                    <i class="bi bi-arrow-right"></i> Voir les notes
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
