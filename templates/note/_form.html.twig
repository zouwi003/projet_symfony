{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
    <div class="row g-3">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.eleve, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.eleve, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.eleve) }}
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.matiere, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.matiere, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.matiere) }}
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.note, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.note, {'attr': {'class': 'form-control', 'placeholder': 'Note sur 20', 'min': '0', 'max': '20', 'step': '0.5'}}) }}
                {{ form_errors(form.note) }}
                <div class="form-text">Note sur 20 (ex: 15.5)</div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.enseignant, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.enseignant, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.enseignant) }}
            </div>
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_note_index') }}" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Annuler
        </a>
    </div>
{{ form_end(form) }}
