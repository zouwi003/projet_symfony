{% extends 'base.html.twig' %}

{% block title %}Classe {{ classe.nom }}{% endblock %}

{% block body %}
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-people-fill"></i> {{ classe.nom }}</h1>
        <p class="text-muted mb-0">Détails de la classe</p>
    </div>
    <div class="d-flex gap-2">
        <a href="{{ path('app_classe_edit', {'id': classe.id}) }}" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Modifier
        </a>
        <a href="{{ path('app_classe_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle"></i> Informations de la classe
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th width="200"><i class="bi bi-hash"></i> ID</th>
                            <td><strong>#{{ classe.id }}</strong></td>
                        </tr>
                        <tr>
                            <th><i class="bi bi-tag"></i> Nom</th>
                            <td>{{ classe.nom }}</td>
                        </tr>
                        <tr>
                            <th><i class="bi bi-graph-up"></i> Niveau</th>
                            <td><span class="badge bg-info fs-6">{{ classe.niveau }}</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-bar-chart"></i> Statistiques
            </div>
            <div class="card-body text-center">
                <div class="stats-card">
                    <div class="number">{{ classe.eleves|length }}</div>
                    <div class="label">Élève(s)</div>
                </div>
            </div>
        </div>
    </div>
</div>

{% if classe.eleves|length > 0 %}
<div class="card mt-4">
    <div class="card-header">
        <i class="bi bi-person-badge"></i> Liste des élèves ({{ classe.eleves|length }})
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Date de naissance</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for eleve in classe.eleves %}
                    <tr>
                        <td>{{ eleve.nom }}</td>
                        <td>{{ eleve.prenom }}</td>
                        <td>{{ eleve.dateNaissance ? eleve.dateNaissance|date('d/m/Y') : '' }}</td>
                        <td class="text-end">
                            <a href="{{ path('app_eleve_show', {'id': eleve.id}) }}" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% else %}
<div class="card mt-4">
    <div class="card-body text-center py-5">
        <i class="bi bi-inbox" style="font-size: 3rem; color: #d1d5db;"></i>
        <p class="text-muted mt-3">Aucun élève dans cette classe</p>
    </div>
</div>
{% endif %}
{% endblock %}
