{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
    <div class="row g-3">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 6ème A'}}) }}
                {{ form_errors(form.nom) }}
                <div class="invalid-feedback">
                    Veuillez entrer un nom de classe.
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.niveau, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.niveau, {'attr': {'class': 'form-select', 'placeholder': 'Ex: 6ème'}}) }}
                {{ form_errors(form.niveau) }}
                <div class="invalid-feedback">
                    Veuillez entrer un niveau.
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_classe_index') }}" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Annuler
        </a>
    </div>
{{ form_end(form) }}
