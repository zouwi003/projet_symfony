{% extends 'base.html.twig' %}

{% block title %}Liste des Classes{% endblock %}

{% block body %}
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-people-fill"></i> Liste des Classes</h1>
        <p class="text-muted mb-0">Gérez toutes les classes de l'établissement</p>
    </div>
    <a href="{{ path('app_classe_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nouvelle classe
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Niveau</th>
                        <th>Nombre d'élèves</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for classe in classes %}
                    <tr>
                        <td><strong>#{{ classe.id }}</strong></td>
                        <td>{{ classe.nom }}</td>
                        <td><span class="badge bg-info">{{ classe.niveau }}</span></td>
                        <td>
                            <span class="badge bg-secondary">{{ classe.eleves|length }} élève(s)</span>
                        </td>
                        <td class="text-end">
                            <a href="{{ path('app_classe_show', {'id': classe.id}) }}" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_classe_edit', {'id': classe.id}) }}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #d1d5db;"></i>
                            <p class="text-muted mt-3">Aucune classe trouvée</p>
                            <a href="{{ path('app_classe_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Créer la première classe
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
